# ==============================================================================
# LOGTO SSO CONFIGURATION
# ==============================================================================
# Logto application endpoint (from your Logto console)
LOGTO_ENDPOINT=https://your-tenant.logto.app

# Logto application ID
LOGTO_APP_ID=your-logto-app-id

# Logto application secret (KEEP SECRET)
LOGTO_APP_SECRET=your-logto-app-secret

# OAuth callback URL (must match Logto app configuration)
LOGTO_REDIRECT_URI=https://your-domain.com/oauth/oidc/callback

# Post sign-out redirect URL
LOGTO_POST_SIGNOUT_URI=https://your-domain.com

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
# Port for the Express server
PORT=3000

# Node environment
NODE_ENV=production

# ==============================================================================
# SESSION SECURITY
# ==============================================================================
# Secret key for express-session (generate a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-64-characters-minimum

# ==============================================================================
# OPTIONAL SETTINGS
# ==============================================================================
# Database URL (if using database for session storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/database

# Redis URL (if using Redis for session storage)
# REDIS_URL=redis://localhost:6379